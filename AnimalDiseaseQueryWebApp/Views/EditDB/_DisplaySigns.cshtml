@for (int i = 0; i < Model.signs.Count; i++)
{
    AnimalDiseaseQueryWebApp.Models.Sign currentSign = Model.signs[i];
    <div class="row">
        <div class="col-md-2">
            @currentSign.Id
        </div>

        <div class="col-md-2">
            @currentSign.Name
        </div>

        

        <div class="col-md-2">

        </div>
        

        @using (Html.BeginForm("RemoveSign", "EditDB", FormMethod.Post, new { @id = "form_remove_sign" }))
        {
            @Html.Hidden("id", currentSign.Id)
            <div class="col-md-2">
                <button class="btn-danger" type="submit"> Remove Sign </button>
            </div>
        }
    </div>
}
