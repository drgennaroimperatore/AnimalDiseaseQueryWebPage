@model DiagnosticDataVisualiser.Models.AdminPageViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Data Visualisation Admin Page</h2>

<div class="col-md-6">
    <h3>Welcome @Model.currentUser</h3>
</div>

@foreach (var user in Model.registeredUsers)
{
<div class="row">
    <div class="col-md-6">
        @user.UserName
    </div>
    <div class="col-md-6">
        @user.Name
    </div>
</div>

    if (user.Name.Equals("Pending"))
    {
<div class="col-md-2">
    @using (Html.BeginForm("ApproveUserAccount", "AdminPage", FormMethod.Post, new { }))
    {
        @Html.Hidden("userId", user.Id);

        <button class="btn btn-success">Approve User</button>
    }
    </div>

    }
}

