        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">

        <div>
            <select id="select_animal_diseasebyMonthHistogram">
                @foreach (string animal in Model.SpeciesInEddie)
                {
                    <option value="@animal">@animal</option>
                }
            </select>
        </div>

        <div id="histogram_month_disease_div">

        </div>
    </div>
</div>